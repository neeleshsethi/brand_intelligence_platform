# App Config
ENVIRONMENT=development
API_HOST=0.0.0.0
API_PORT=8000

# Demo Modes
# DEMO_MODE: Cache responses for instant results (1-2s) - great for live demos
# MOCK_MODE: Use hardcoded responses without any API/LLM calls - works offline
# For best demo experience: set both to true
DEMO_MODE=false
MOCK_MODE=false

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# LangSmith (for tracing)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=pfizer-brand-planning

# Supabase
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_anon_key

# Retry Configuration
MAX_RETRIES=3
RETRY_WAIT_SECONDS=2
